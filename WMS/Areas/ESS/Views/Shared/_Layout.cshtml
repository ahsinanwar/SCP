<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pakistan Poverty Alleviation Fund (PPAF) | WMS</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/toastr.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
     <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.js" type="text/javascript"></script>
   
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
   
@*<script src="~/Scripts/highcharts.js"></script>
<script src="~/Scripts/angular/highcharts-ng.js"></script>*@
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background-color: rgb(71,190,255)">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Workforce Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon glyphicon-tasks"></i>  Leave Forward <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                        @if (Session["MLeave"].ToString() == "1")
                            {
                                <li><a href="~/ESS/LeaveForward">Forward Leaves </a></li>
                                <li><a href="~/ESS/ESSLeave/Create">Create Leave </a></li>
                            }
                     
                        </ul>
                     </li>
                    </ul>
         
                  <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i>  <b class="caret"></b></a>
                      <ul class="dropdown-menu">
                        <li><a>@Html.ActionLink("Log Out", "Logout", "Home", null, new { @class = "" })</a></li>
                      </ul>
                    </li>
                  </ul>

            </div>
        </div>

        
    </div>
    <div class="container body-content" style="background-color: rgb(235,235,235);" >
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pakistan Poverty Alleviation Fund (PPAF)  <b>Workforce Management System</b> - <span style="color: Background"><a href="http://www.cns.com.pk">powered by CNS</a></span></p>
        </footer>
    </div>
@*  <script src="~/Scripts/toastr.js"></script>
   
<script src="~/Scripts/angular/UserEditController.js"></script>  
<script src="~/Scripts/angular/DashboardController.js"></script>  *@
</body>
</html>
