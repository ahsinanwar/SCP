@model WMS.Models.LvApplication

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ESS/Views/Shared/_Layout.cshtml";
}

<h2>Create Leave</h2>


@using (Html.BeginForm("Create", "ESSLeave", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal>
        @Html.ValidationSummary(true)
         <div class="form-group col-md-8">
            <label class="control-label col-md-4">Leave Date </label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.LvDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvDate)
            </div>
         </div>
    
        if (ViewBag.QuotaMade == true)
        {
          <div class="form-group col-md-12">
            <label class="control-label col-md-4">Leave Type<span style="color:red;"> *</span></label>
            <div class="col-md-8">
                @Html.DropDownList("LvType",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.LvType)
            </div>
         </div>
           <div class="form-group col-md-12">
             <div class="row" id="LeavesRemainingDiv" style="display:none">
                 <div class="alert alert-info" role="alert" id="LeavesRemaining">
                     <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  
                </div>
            </div>
           </div>

        <div class="form-group col-md-12">
            <label class="control-label col-md-4">Manager ID<span style="color:red;"> *</span></label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.ManagerID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ManagerID)
            </div>
        </div>

           <div class="form-group col-md-12">
            <label class="control-label col-md-4">From Date</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.FromDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FromDate)
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-md-4">To Date</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.ToDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ToDate)
            </div>
        </div>
        <div class="form-group col-md-12">
            <label class="control-label col-md-4">Half Leave</label>
            <div class="col-md-8">
                @Html.DropDownList("IsHalf", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "No", Value = "false", Selected=true},
                                        new SelectListItem { Text = "Yes", Value = "true"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                @Html.ValidationMessageFor(model => model.IsHalf)
            </div>
        </div>

        <div class="form-group col-md-12">
            <label class="control-label col-md-4">First Half</label>
            <div class="col-md-8">
                @Html.DropDownList("FirstHalf", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Second Half", Value = "false", Selected=true},
                                        new SelectListItem { Text = "First Half", Value = "true"}
                                    },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                @Html.ValidationMessageFor(model => model.FirstHalf)
            </div>
        </div>

      <div class="form-group col-md-12">
            <label class="control-label col-md-4">Leave Reason</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.LvReason,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvReason)
            </div>
        </div>

       <div class="form-group col-md-12">
            <label class="control-label col-md-4">Leave Address</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.LvAddress,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LvAddress)
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        
        }
      else
        {
       <h2>Your Quota hasn't been created. Contact your HR administrator</h2> 
        
        }
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="@Url.Content("~/Areas/ESS/Scripts/ESSLeave.js")")"></script>